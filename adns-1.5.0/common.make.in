MAJOR=		1
MINOR=		5
SHLIBFILE=	@SHLIBFILE@
SHLIBSONAME=	@SHLIBSONAME@
SHLIBFORLINK=	@SHLIBFORLINK@

CC=		@CC@
CFLAGS=		$(AUTOCFLAGS) $(WARNS) $(WERROR) $(DIRCFLAGS) $(XCFLAGS)
LDFLAGS=	$(AUTOLDFLAGS) $(DIRLDFLAGS) $(XLDFLAGS)
LDLIBS=		@LIBS@ $(XLIBS)
AUTOCFLAGS=	@CFLAGS@
AUTOLDFLAGS=	@LDFLAGS@
WARNS=		@WARNS@
#WERROR=	-Werror

M4=		m4
RANLIB=		@RANLIB@

SHLIBCC=	@SHLIBCC@

MKSHLIB_1=	@MKSHLIB_1@
MKSHLIB_2=	@MKSHLIB_2@
MKSHLIB_3=	@MKSHLIB_3@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
libdir=		@libdir@
includedir=	@includedir@

AC_INSTALL=	@INSTALL@
ifeq ($(AC_INSTALL),./install-sh -c)
INSTALL=	$(srcdir)/../$(AC_INSTALL)
else
INSTALL=	$(AC_INSTALL)
endif

INSTALL_PROGRAM=	$(INSTALL) -m 755 $(INSTALL_PROGRAM_FLAGS)
INSTALL_DATA=		$(INSTALL) -m 644

